<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Product" table="product">
    <indexes>
      <index name="id_supplier" columns="id_supplier"/>
    </indexes>
    <id name="idProduct" type="integer" column="id_product">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="ref" type="string" column="ref" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="name" type="string" column="name" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="price" type="integer" column="price" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="review" type="integer" column="review" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="state" type="string" column="state" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="idSupplier" type="integer" column="id_supplier" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
